{
  "doctype": "DocType",
  "name": "Service Task",
  "module": "Service Planner",
  "istable": 1,
  "custom": 1,
  "editable_grid": 1,
  "track_changes": 1,
  "fields": [
    {
      "fieldname": "task_section",
      "fieldtype": "Section Break",
      "label": "Task Details"
    },
    {
      "fieldname": "parent",
      "fieldtype": "Link",
      "options": "Service Project",
      "reqd": 1,
      "hidden": 1,
      "read_only": 1
    },
    {
      "fieldname": "parenttype",
      "fieldtype": "Data",
      "reqd": 1,
      "hidden": 1,
      "read_only": 1
    },
    {
      "fieldname": "parentfield",
      "fieldtype": "Data",
      "reqd": 1,
      "hidden": 1,
      "read_only": 1
    },
    {
      "fieldname": "task_title",
      "label": "Task Title",
      "fieldtype": "Data",
      "reqd": 1,
      "in_list_view": 1,
      "read_only_depends_on": "eval:!frappe.user.has_role('System Manager')",
      "description": "Short descriptive title for the task"
    },
    {
      "fieldname": "column_break_1",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "due_date",
      "label": "Due Date/Time",
      "fieldtype": "Datetime",
      "reqd": 1,
      "in_list_view": 1,
      "read_only_depends_on": "eval:!frappe.user.has_role('System Manager')",
      "description": "Deadline for completing this task"
    },
    {
      "fieldname": "duration_hours",
      "label": "Duration (Hours)",
      "fieldtype": "Float",
      "precision": 2,
      "read_only_depends_on": "eval:!frappe.user.has_role('System Manager')",
      "description": "Expected duration of the task"
    },
    {
      "fieldname": "assignment_section",
      "fieldtype": "Section Break",
      "label": "Assignment"
    },
    {
      "fieldname": "assigned_role",
      "label": "Assigned Role",
      "fieldtype": "Link",
      "options": "Role",
      "reqd": 1,
      "in_list_view": 1,
      "read_only_depends_on": "eval:!frappe.user.has_role('System Manager')",
      "description": "Role responsible for this task"
    },
    {
      "fieldname": "assigned_to",
      "label": "Assigned To",
      "fieldtype": "Link",
      "options": "User",
      "read_only_depends_on": "eval:!frappe.user.has_role('System Manager')",
      "description": "Specific user assigned to carry out this task"
    },
    {
      "fieldname": "status_section",
      "fieldtype": "Section Break",
      "label": "Status & Notes"
    },
    {
      "fieldname": "status",
      "label": "Status",
      "fieldtype": "Select",
      "options": "Pending\nIn Progress\nCompleted\nCancelled\nOverdue",
      "default": "Pending",
      "reqd": 1,
      "in_list_view": 1,
      "description": "Current status of the task",
      "read_only_depends_on": "eval:doc.status === 'Completed' && !frappe.user.has_role('System Manager')"
    },
    {
      "fieldname": "priority",
      "label": "Priority",
      "fieldtype": "Select",
      "options": "Low\nMedium\nHigh\nUrgent",
      "default": "Medium",
      "in_list_view": 1,
      "description": "Task priority level"
    },
    {
      "fieldname": "column_break_2",
      "fieldtype": "Column Break"
    },
    {
      "fieldname": "start_time",
      "label": "Start Time",
      "fieldtype": "Datetime",
      "depends_on": "eval:doc.status === 'In Progress'",
      "description": "When work began on this task"
    },
    {
      "fieldname": "completion_time",
      "label": "Completion Time",
      "fieldtype": "Datetime",
      "depends_on": "eval:doc.status === 'Completed'",
      "read_only": 1,
      "description": "When the task was completed"
    },
    {
      "fieldname": "notes_section",
      "fieldtype": "Section Break",
      "label": "Notes & Comments"
    },
    {
      "fieldname": "notes",
      "label": "Notes",
      "fieldtype": "Text Editor",
      "description": "Additional details or comments about the task"
    },
    {
      "fieldname": "completion_notes",
      "label": "Completion Notes",
      "fieldtype": "Small Text",
      "depends_on": "eval:doc.status === 'Completed'",
      "mandatory_depends_on": "eval:doc.status === 'Completed'",
      "description": "Notes recorded upon task completion"
    },
    {
      "fieldname": "system_section",
      "fieldtype": "Section Break",
      "label": "System",
      "collapsible": 1,
      "hidden": 1
    },
    {
      "fieldname": "organization",
      "label": "Organization",
      "fieldtype": "Link",
      "options": "Company",
      "read_only": 1
    },
    {
      "fieldname": "auto_generated",
      "label": "Auto Generated",
      "fieldtype": "Check",
      "default": 0,
      "read_only": 1,
      "description": "Indicates if this task was automatically generated"
    },
    {
      "fieldname": "last_notification_sent",
      "label": "Last Notification",
      "fieldtype": "Datetime",
      "read_only": 1,
      "description": "When the last notification was sent for this task"
    }
  ],
  "permissions": [
    {
      "role": "System Manager",
      "read": 1,
      "write": 1,
      "create": 1,
      "delete": 1,
      "submit": 1,
      "cancel": 1
    },
    {
      "role": "Projects Manager",
      "read": 1,
      "write": 1,
      "create": 0,
      "delete": 0,
      "submit": 0,
      "cancel": 0,
      "if_owner": 1
    },
    {
      "role": "Projects User",
      "read": 1,
      "write": 1,
      "create": 0,
      "delete": 0,
      "submit": 0,
      "cancel": 0,
      "if_owner": 1
    }
  ]
}
